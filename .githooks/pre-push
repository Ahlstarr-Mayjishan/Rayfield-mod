#!/usr/bin/env bash
set -euo pipefail

if ! command -v lua >/dev/null 2>&1; then
	echo "[pre-push] lua not found; skip verify scripts."
	exit 0
fi

echo "[pre-push] Running verification scripts..."
lua scripts/verify-module-map.lua
lua scripts/verify-no-direct-httpget.lua
lua scripts/verify-no-direct-tweencreate.lua
echo "[pre-push] Verification passed."
